{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
      <main>
        <section>
          {{> title big=true data="My Education"}}
          <ul>
            {{#each education}}
              <li>
                {{name}}

                {{#if isEnd includeZero=true}} {{/if}}

                {{#unless isEnd includeZero=false}} (ще в процесі) {{/unless}}
              </li>
            {{/each}}
          </ul>
        </section>
        <section>
          {{> title big=false data="My Certificates"}}
          <ul>
            {{#each certificates}}
              <li>
                {{name}} ( {{id}} )
                  
              </li>
            {{/each}}
          </ul>
        </section>
      </main>
    {{/with}}
</div>

